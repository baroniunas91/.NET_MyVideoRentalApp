@model VideoRent.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<br />
<ul>
    @Html.ValidationMessage("HasUnreturnedRentals", "", new { @class = "text-danger" })
    <li><b>Membership Type: </b>@Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li><b>Birthdate: </b>@Model.Birthdate.Value.ToShortDateString()</li>
    }
    @if (Model.IsSubscribedToNewsletter)
    {
        <li><b>Subscribed to Newsletter: </b>Yes</li>
    }
    else
    {
        <li><b>Subscribed to Newsletter: </b>No</li>
    }
</ul>
<p style="font-weight:bold; margin:30px 0px 10px">@Html.ActionLink("View history", "History", "Customers", new { id = Model.Id }, null)</p>
<p>
    @Html.ActionLink("Edit", "Edit", "Customers", new { id = Model.Id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Delete", "Delete", "Customers", new { id = Model.Id }, new { @class = "btn btn-primary" })
</p>